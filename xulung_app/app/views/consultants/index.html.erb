<%
meta title: @title,
     description: @description,
     keywords: @keywords
%>
<% if !browser.device.mobile? %>
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
  <div class="container">
    <h1 class="pull-left">技术顾问</h1>
    <ul class="pull-right breadcrumb">
      <li>
        <a href="<%=root_path %>">首页</a>
      </li>
      <li class="active">技术顾问</li>
    </ul>
  </div>
  <!--/container-->
</div>
<!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
<% end %>
<div class="container content">
  <% if !browser.device.mobile? %>
  <% @consultants.each do |consultant| %>
  <div class="col-md-12">

    <!--Blog consultant-->
    <% if consultant.id[0]!=1 %>
    <div class="funny-boxes funny-boxes-top-yellow">
    <% else %>
      <div class="funny-boxes funny-boxes-top-sea">
        <% end %>
        <div class="col-md-7">
              <h1><a href="<%=consultant_path(consultant)%>">
              <%=consultant.position  %>
              <%=consultant.workyear  %>年工作经验
              <%=consultant.company.capitalize  %>
            </a>
              </h1>
            <%= markdown(consultant.experience) %>
          </div>
        <div class="col-md-2">
            <img class="pull-left media-object" src="<%=letter_avatar_url(PinYin.permlink(consultant.realname), 200)%>", width="100">
        </div>
        <div class="col-md-3">
          <ul class="list-unstyled">
          <li><h2 class="color-green"><strong><i class="fa fa-yen"></i><%=consultant.hourrate  %> 元/8小时</h2></strong></li>
        </ul>

        </div>
      </div>
      </div>
      <% end %>
      <% end %>

      <hr class="devider devider-db-dashed">
      <%=paginate @consultants %>
    </div>
