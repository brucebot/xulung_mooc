<% content_for :head do %>
  新建订单
<% end %>
<div class="order">
  <table>
    <tr>
      <th>订单号</th>
      <th>商品名称</th>
      <th>商品价格（元）</th>
      <th>付款状态</th>
    </tr>
    <tr>
      <td><%= @out_trade_no %></td>
      <td><%= @cup.name %></td>
      <td><%= @cup.price %></td>
      <td>未付款</td>
    </tr>
  </table>
  <%= form_tag "/checkout" do %>
    <%= hidden_field_tag :cup_id, @cup.id %>
    <%= hidden_field_tag :subject, @cup.name %>
    <%= hidden_field_tag :out_trade_no, @out_trade_no %>
    <%= hidden_field_tag :total_fee, @cup.price * 1 %>
    <div class="action">
      <%= submit_tag "提交订单", class: "order-button" %>
    </div>
  <% end %>
</div>
