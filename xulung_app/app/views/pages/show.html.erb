
<%
meta title: @title,
     description: @description,
     keywords: @keywords
%>
<% if !browser.device.mobile? %>
<!--=== Breadcrumbs ===-->
    <div class="breadcrumbs">
        <div class="container">
            <h1 class="pull-left"><%= @page.title %></h1>
            <ul class="pull-right breadcrumb">
                <li><a href="<%=root_path %>">首页</a></li>
                <li><a href="<%=pages_path  %>">诩帮助</li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->
    <!--=== End Breadcrumbs ===-->
    <% end %>
<p id="notice"><%= notice %></p>
<div class="container">
<!--=== Content Part ===-->
<div class="page-area">
			<h1 class="text-center color-green"><a href="<%=page_path(@page)  %>"><%= @page.title %></a></h1>
			<div class="blog-post-tags text-center" >
                        <ul class="list-unstyled list-inline blog-info">
                            <li><i class="fa fa-calendar"></i> <%= @page.created_at.strftime("%Y-%m-%d") %></li>
                            <li><i class="fa fa-pencil"></i>诩阆</li>
                        </ul>
                    </div>
                    <br>
			<div class="col-md-12">
				<div class="yue">
				<% if @page.image? %>
				<%= image_tag(@page.image.large) %>
				<% end %>
				<%=sanitize(@page.body) %>
			<small class="pull-right"><% if user_signed_in? and current_user.admin? %>
             <%= link_to sanitize('<button><i class="fa fa-trash-o"></i> Delete</button>'),
          page_path(@page),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-danger btn-xs' %>

          <%= link_to sanitize('<button><i class="fa fa-pencil"></i> Edit</button>'),edit_page_path(@page) ,:class=>'btn btn-info btn-xs'%>
          <% end %>
          </small>
          <%= social_share_button_tag(@title + " " + "诩阆 xulung.com") %>

			<hr>
			</div>
			</div>
</div>
